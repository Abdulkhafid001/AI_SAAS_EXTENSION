{
    "manifest_version": 3,
    "name": "Reading Time",
    "version": "1.0",
    "description": "Add the reading time to Chrome Extension documentation articles",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://api.example.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/extension_logo.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}