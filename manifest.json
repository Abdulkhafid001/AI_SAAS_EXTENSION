{
    "name": "Reading Time",
    "version": "1.0.0",
    "manifest_version": 3,
    "minimum_chrome_version": "102",
    "description": "Add the reading time to Chrome Extension documentation articles",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://extension-tips.glitch.me/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/extension_logo.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+B",
                "mac": "Command+B"
            }
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ]
}